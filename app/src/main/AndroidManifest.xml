<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.douncoding.guaranteedanp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".common.AppContext">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ProfileActivity" />
        <activity
            android:name=".LessonDetailsActivity"
            android:label="@string/title_activity_lesson_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.CreatorActivity" />

        <service
            android:name=".net.NETService"
            android:exported="false"/>
    </application>

</manifest>